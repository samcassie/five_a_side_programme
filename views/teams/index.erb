<div id="teams-title">
    <div id="teams-new">Teams registered:
        <form action="/teams/new" method="get">
            <input type="submit" value="Register New Team" class="sign-up">
        </form>
    </div>
    <hr>

    <% for team in @teams %>
        <div>
        <h3>Team Name: <%=team.name%></h3>
        <h3>Players: <% for player in team.players%>
        player</h3>
        <% end %>
        </div>
        <br>

        <div id="buttons">
            <form action="/teams/:id/delete" method="get" class="space">
                <input type="submit" value="Remove" id="sign-up-team" class="space">
            </form>
            <form action="/teams/:id/add-player" method="get" class="space">
                <input type="submit" value="Add Player" id="sign-up-team" class="space">
            </form>
        </div>
        <hr>
    <% end %>
</div>
