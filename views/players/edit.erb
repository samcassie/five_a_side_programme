<div id="players-title">
    <form action="/players/<%=@player.id%>/edit" method="post">
        <label for="first-name">First Name</label>
            <input id="first-name" type="text" name="first_name" class="input-box" value="<%=@player.first_name%>">

        <label for="second-name">Last Name</label>
            <input id="second-name" type="text" name="second_name" class="input-box" value="<%=@player.second_name%>"

        <label for="age">Age</label>
            <input id="age" type="number" name="age" min="16" max="99" value="<%=@player.age%>"


        <label for="positon">Position</label>
            <select id="position" name="position" class="input-box">
                <option value="<%=@player.position%>" selected="selected"> <%=@player.position%> </option>
                <option value="Goalkeeper">Goalkeeper</option>
                <option value="Defender">Defender</option>
                <option value="Midfielder">Midfielder</option>
                <option value="Striker">Striker</option>
            </select>

            <input type="submit" value="Edit Player" id="sign-up-player">
</form>
