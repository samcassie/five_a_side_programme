<div id="players-title">
    <div id="players-new">Players registered:

        <form action="/players/new" method="get">
            <input type="submit" value="add player">
        </form>

    </div>
    <hr>

    <% for player in @players %>
        <h3>Name: <%=player.first_name%> <%=player.second_name%></h3>
        <h3>Age: <%=player.age%></h3>
        <h3>Position: <%=player.position%></h3>
        <h3>Team:
            <% if player.team == nil %>
            None
            <% else %>
                <%= @player.team %>
            <% end %>
        </h3>
        <hr>
        <%end%>
</div>
